{
  "http": {
    "allowlist": [
      {
        "host": "api.notion.com",
        "path_prefix": "/v1/",
        "methods": ["GET", "POST", "PATCH", "DELETE"]
      }
    ],
    "credentials": {
      "notion_api_token": {
        "secret_name": "notion_api_token",
        "location": { "type": "bearer" },
        "host_patterns": ["api.notion.com"]
      }
    },
    "rate_limit": {
      "requests_per_minute": 50,
      "requests_per_hour": 1000
    },
    "timeout_secs": 30
  },
  "secrets": {
    "allowed_names": ["notion_api_token"]
  }
}
